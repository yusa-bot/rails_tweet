<header>
      <div class="header-logo">
        <%= link_to("TweetApp", "/")%>
      </div>
      <ul class="header-menus">
        <li>
          <%= link_to("TweetAppとは", "/about")%>
        </li>
        <li>
          <%= link_to("投稿一覧", "/posts/index")%>
        </li>
      </ul>
</header>

<div class="main posts-index">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <%= link_to(post.content, "/posts/#{post.id}") %>
      </div>
    <% end %>
  </div>
</div>
